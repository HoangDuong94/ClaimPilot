                        if (url) {
                            sap.m.MessageBox.confirm(
                                `M√∂chten Sie diesen Link √∂ffnen?\n\n${url}`,
                                {
                                    title: "Externen Link √∂ffnen",
                                    onClose: (action) => {
                                        if (action === sap.m.MessageBox.Action.OK) {
                                            window.open(url, '_blank', 'noopener,noreferrer');
                                        }
                                    }
                                }
                            );
